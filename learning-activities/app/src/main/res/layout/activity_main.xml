<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udemy.android.atmcompany.MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:background="@drawable/img_logo"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_services"
        android:layout_alignTop="@+id/btn_about"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:background="@drawable/btn_services"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/btn_contacts"
        android:id="@+id/btn_contact"
        android:layout_alignTop="@+id/btn_clients"
        android:layout_alignLeft="@+id/btn_services"
        android:layout_alignStart="@+id/btn_services"
        android:background="@drawable/btn_contacts"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="57dp"
        android:id="@+id/btn_about"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_about"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_clients"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn_about"
        android:layout_alignStart="@+id/btn_about"
        android:layout_marginBottom="47dp"
        android:background="@drawable/btn_clients"/>

    <TextView
        android:text="@string/txv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/txv_about"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/btn_about"
        android:layout_alignRight="@+id/btn_about"
        android:layout_alignEnd="@+id/btn_about"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"/>

    <TextView
        android:text="@string/txv_services"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txv_about"
        android:layout_alignRight="@+id/btn_services"
        android:layout_alignEnd="@+id/btn_services"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/txv_services"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"/>

    <TextView
        android:text="@string/txv_clients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txv_clients"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/btn_contact"
        android:layout_alignRight="@+id/txv_about"
        android:layout_alignEnd="@+id/txv_about"/>

    <TextView
        android:text="@string/txv_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txv_clients"
        android:layout_alignRight="@+id/txv_services"
        android:layout_alignEnd="@+id/txv_services"
        android:id="@+id/txv_contact"
        android:textSize="20sp"
        android:textColor="@android:color/background_dark"/>
</RelativeLayout>
