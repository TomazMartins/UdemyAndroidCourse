<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udemy.android.radiobuttonsample.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="Wich Are Your favorite food?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_title"
        android:layout_weight="0.41"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:id="@+id/rdg_options">

        <RadioButton
            android:text="Salad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btr_salad"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Parmegiana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btr_parmegiana"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Massa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btr_massa"
            android:layout_weight="1"/>
    </RadioGroup>

    <Button
        android:text="Select"
        android:layout_width="200dp"
        android:id="@+id/btn_select"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_result"
        android:layout_weight="1"
        android:textAlignment="center"
        />
</LinearLayout>
